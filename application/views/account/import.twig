{% extends '_layouts/template.twig' %}

{% block content_header %}
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Account
      <small>
        Import
      </small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
      <li><a href="/account/view">Account</a></li>
      <li class="active">
        Import
      </li>
    </ol>
  </section>
{% endblock %}

{% block content %}
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <!-- column -->
      <div class="col-xs-12">
        {% if imported %}
          <div class="box box-warning">
            <div class="box-header">
              <h3 class="box-title">Added Accounts</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
              <table class="table table-bordered table-striped data-table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>NUSNET ID</th>
                    <th>Room</th>
                    <th>Email</th>
                    <th>Contact</th>
                  </tr>
                </thead>
                <tbody>
                  {% for row in imported %}
                    <tr>
                      <td>{{ row.name }}</td>
                      <td>{{ row.user }}</td>
                      <td>{{ row.room }}</td>
                      <td>{{ row.email }}</td>
                      <td>{{ row.contact }}</td>
                    </tr>
                  {% endfor %}
                </tbody>
                <tfoot>
                  <tr>
                    <th>Name</th>
                    <th>NUSNET ID</th>
                    <th>Room</th>
                    <th>Email</th>
                    <th>Contact</th>
                  </tr>
                </tfoot>
              </table>
            </div><!-- /.box-body -->
          </div><!-- /.box -->
        {% endif %}

        {% if updated %}
          <div class="box box-warning">
            <div class="box-header">
              <h3 class="box-title">Updated Accounts</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
              <table class="table table-bordered table-striped data-table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>NUSNET ID</th>
                    <th>Room</th>
                    <th>Email</th>
                    <th>Contact</th>
                  </tr>
                </thead>
                <tbody>
                  {% for row in updated %}
                    <tr>
                      <td>{{ row.name }}</td>
                      <td>{{ row.user }}</td>
                      <td>{{ row.room }}</td>
                      <td>{{ row.email }}</td>
                      <td>{{ row.contact }}</td>
                    </tr>
                  {% endfor %}
                </tbody>
                <tfoot>
                  <tr>
                    <th>Name</th>
                    <th>NUSNET ID</th>
                    <th>Room</th>
                    <th>Email</th>
                    <th>Contact</th>
                  </tr>
                </tfoot>
              </table>
            </div><!-- /.box-body -->
          </div><!-- /.box -->
        {% endif %}

        <div class="box box-warning">
          <div class="box-header with-border">
            <h3 class="box-title">
              Import from File
            </h3>
          </div><!-- /.box-header -->
          <form role="form" method="post" enctype="multipart/form-data">
            <input type="hidden" name="submit">
            <div class="box-body">
              <div class="row">
                <div class="col-md-12">
                  <!-- file upload -->
                  <div class="form-group">
                    <label for="exampleInputFile">File input</label>
                    <input type="file" id="exampleInputFile" name="file">
                    <p class="help-block">CSV format only. Max 2MB file size.</p>
                      <ul>
                        <li>Sample Account CSV file available.<br><a href="/sample/account-sample.csv" class="btn btn-warning btn-sm"><i class="fa fa-download"></i> Download</a></li>
                        <li><code>Name</code> and <code>NUSNET ID</code> columns are compulsory.</li>
                        <li>It is <strong>case-sensitive</strong>.</li>
                        <li>If <code>NUSNET ID</code> already exists, the existing account will be updated with the imported data.</li>
                        <li>If there are rows with repeated <code>NUSNET ID</code>, only the first row will be imported.</li>
                      </ul>
                  </div>
                </div>
              </div>
            </div><!-- /.box-body -->
            <div class="box-footer">
              <button class="btn btn-success" type="submit">
                <i class="fa fa-upload"></i> Upload
              </button>
              <a class="btn btn-default" href="/account/view">
                <i class="fa fa-ban"></i> Cancel
              </a>
            </div>
          </form>
        </div><!-- /.box -->
      </div><!--/.col -->
    </div>   <!-- /.row -->
  </section><!-- /.content -->
{% endblock %}
