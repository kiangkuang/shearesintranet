{% extends '_layouts/template.twig' %}

{% block content_header %}
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Account
      <small>
        {{ account ? (this.editable ? 'Edit' : 'View') : 'Add' }}
      </small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
      <li><a href="/account/view">Account</a></li>
      <li class="active">
        {{ account ? (this.editable ? 'Edit' : 'View') : 'Add' }}
      </li>
    </ol>
  </section>
{% endblock %}

{% block content %}
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <!-- column -->
      <div class="col-xs-12">
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">
              {{ account ? (this.editable ? 'Edit' : 'View') ~ ' Information' : 'Add New Account' }}
            </h3>
          </div><!-- /.box-header -->

          <form role="form" action="/account/update" method="post">
            <div class="box-body">
              <div class="row">
                {% if account %}
                  <input type="hidden" name="id" value="{{ account.id }}">
                {% endif %}
                <div class="col-md-6">
                  <!-- text input -->
                  <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Name" value="{{ account.name }}" required {{ this.editable ? '' : 'disabled' }}>
                  </div>
                </div>

                <div class="col-md-6">
                  <!-- text input -->
                  <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="user" placeholder="Username" value="{{ account.user }}" required {{ this.editable ? '' : 'disabled' }}>
                  </div>
                </div>

                <div class="col-md-4">
                  <!-- text input -->
                  <div class="form-group">
                    <label>Room</label>
                    <input type="text" class="form-control" name="room" placeholder="Room" value="{{ account.room }}" {{ this.editable ? '' : 'disabled' }}>
                  </div>
                </div>

                <div class="col-md-4">
                  <!-- text input -->
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Email" value="{{ account.email }}" {{ this.editable ? '' : 'disabled' }}>
                  </div>
                </div>

                <div class="col-md-4">
                  <!-- text input -->
                  <div class="form-group">
                    <label>Contact</label>
                    <input type="tel" class="form-control" name="contact" placeholder="Contact" value="{{ account.contact }}" {{ this.editable ? '' : 'disabled' }}>
                  </div>
                </div>

                {% if this.editable %}
                  <div class="col-md-6">
                    <!-- text input -->
                    <div class="form-group">
                      <label>Password</label>
                      <input type="password" class="form-control" name="password" placeholder="{{ account ? 'Leave blank if not changing' : 'Optional' }}">
                      <small>Optional. Only set for users who have trouble logging in using NUSNET account.</small><br>
                      {% if account.has_password %}
                        <small class="text-yellow">Account currently has password.</small>
                        <small>Click <a href="/account/removePassword/{{ account.id }}">here</a> to remove.</small>
                      {% else %}
                        <small class="text-muted">Account currently has no password.</small>
                      {% endif %}
                    </div>
                  </div>

                  <div class="col-md-6">
                    <!-- text input -->
                    <div class="form-group">
                      <label>Confirm Password</label>
                      <input type="password" class="form-control" name="password2" placeholder="{{ account ? 'Leave blank if not changing' : 'Optional' }}">
                    </div>
                  </div>
                {% endif %}
              </div>
            </div><!-- /.box-body -->
            <div class="box-footer">
              {% if this.editable %}
                <button class="btn btn-success" type="submit">
                  <i class="fa fa-save"></i> {{ account ? 'Save' : 'Add' }}
                </button>
              {% endif %}
              <a class="btn btn-default" href="/account/view">
                <i class="fa fa-undo"></i> Back
              </a>
            </div>
          </form>
        </div><!-- /.box -->

        {% if account and this.editable %}
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">
                Add CCAs
              </h3>
            </div><!-- /.box-header -->

            <form role="form" action="/membership/addMembership" method="post">
              <div class="box-body">
                <div class="row">
                  <input type="hidden" name="account_id" value="{{ account.id }}">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label>CCA Names</label>
                      <select class="form-control select2" multiple="multiple" data-placeholder="Names of new members" name="cca_ids[]">
                        {% for cca in ccas %}
                          <option value="{{ cca.id }}">{{ cca.name }}</option>
                        {% endfor %}
                      </select>
                    </div><!-- /.form-group -->
                  </div>
                </div>
              </div><!-- /.box-body -->
              <div class="box-footer">
                <button class="btn btn-success" type="submit">
                  <i class="fa fa-plus"></i> Add
                </button>
              </div>
            </form>
          </div><!-- /.box -->
        {% endif %}

        {% if account %}
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">
                Membership
              </h3>
            </div><!-- /.box-header -->
            <form role="form" action="/membership/updateMemberships" method="post">
              <input type="hidden" name="account_id" value="{{ account.id }}">
              <div class="box-body">
                <table class="table table-bordered table-striped data-table">
                  <thead>
                    <tr>
                      <th>CCA</th>
                      <th>Role</th>
                      <th>Points</th>
                      <th style="width: 50px;"></th>
                    </tr>
                  </thead>
                  <tbody>
                    {% if memberships %}
                      {% for membership in memberships %}
                        <tr>
                          <td>
                            <a href="/cca/edit/{{ membership.cca_id }}">{{ membership.cca_name }}</a>
                            <input type="hidden" name="memberships[{{ membership.id }}][id]" value="{{ membership.id }}">
                          </td>
                          <td>
                            <input type="text" class="form-control" name="memberships[{{ membership.id }}][role]" placeholder="Role" value="{{ membership.role }}" {{ this.editable ? '' : 'disabled' }}>
                          </td>
                          <td>
                            <input type="number" class="form-control" name="memberships[{{ membership.id }}][points]" placeholder="Points" value="{{ membership.points }}" {{ this.editable ? '' : 'disabled' }}>
                          </td>
                          <th class="text-center">
                            {% if this.editable %}
                              <a href="/membership/delete/{{ membership.id }}?redirect={{ this.uri.uri_string()|url_encode }}" class="btn btn-sm btn-default {{ this.editable ? '' : 'disabled' }}">
                                <i class="fa fa-trash"></i> Delete
                              </a>
                            {% endif %}
                          </th>
                        </tr>
                      {% endfor %}
                    {% endif %}
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>CCA</th>
                      <th>Role</th>
                      <th>Points</th>
                      <th></th>
                    </tr>
                  </tfoot>
                </table>
              </div><!-- /.box-body -->
              <div class="box-footer">
                {% if this.editable %}
                  <button class="btn btn-success" type="submit">
                    <i class="fa fa-save"></i> Save
                  </button>
                {% endif %}
              </div>
            </form>
          </div><!-- /.box -->
        {% endif %}
      </div><!--/.col -->
    </div>   <!-- /.row -->
  </section><!-- /.content -->
{% endblock %}

{% block script %}
  <script>
    $(function () {
      $(".data-table").DataTable();
      //Initialize Select2 Elements
      $(".select2").select2();
    });
  </script>
{% endblock %}
