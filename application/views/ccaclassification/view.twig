{% extends '_layouts/template.twig' %}

{% block content_header %}
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      CCA Classification
      <small>
        All
      </small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
      <li class="active">CCA Classification</li>
    </ol>
  </section>
{% endblock %}

{% block content %}
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box box-warning">
          <div class="box-header">
            <h3 class="box-title">CCA Classification</h3>
            <div class="box-tools pull-right">
              <a href="/ccaclassification/edit" class="btn btn-success"><i class="fa fa-plus"></i> Add</a>
            </div><!-- /.box-tools -->
          </div><!-- /.box-header -->
          <div class="box-body">
            <table class="table table-bordered table-striped data-table hidden">
              <thead>
                <tr>
                  <th>Name</th>
                  <th style="width: 110px;"></th>
                </tr>
              </thead>
              <tbody>
                {% for ccaclassification in ccaclassifications %}
                  <tr>
                    <td>{{ ccaclassification.name }}</td>
                    <th class="text-center">
                      {% if this.editable %}
                        <form role="form" action="/ccaclassification/delete" method="post">
                          <input type="hidden" name="{{ csrf['name'] }}" value="{{ csrf['hash'] }}">
                          <input type="hidden" name="id" value="{{ ccaclassification.id }}">
                          <a href="/ccaclassification/edit/{{ ccaclassification.id }}" class="btn btn-sm btn-default">
                            <i class="fa fa-edit"></i> {{ this.editable ? 'Edit' : 'View' }}
                          </a>
                          <button class="js-confirm-delete btn btn-sm btn-default" type="submit">
                            <i class="fa fa-trash"></i> Delete
                          </button>
                        </form>
                      {% endif %}
                    </th>
                  </tr>
                {% endfor %}
              </tbody>
              <tfoot>
                <tr>
                  <th>Name</th>
                  <th></th>
                </tr>
              </tfoot>
            </table>
          </div><!-- /.box-body -->
        </div><!-- /.box -->
      </div><!-- /.col -->
    </div><!-- /.row -->
  </section><!-- /.content -->
{% endblock %}
